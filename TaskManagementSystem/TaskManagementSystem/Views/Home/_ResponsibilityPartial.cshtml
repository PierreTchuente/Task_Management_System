            <!-- Trigger the modal with a button -->
            
            <!-- Modal -->
            <!---MODAL END---->





            <!-- DEPARTMENT RESPONSIBILITIES DETAILS MODAL START-->
            <div class="modal fade" id="deptRespDetailsModal" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <!-- Title Begin-->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Responsibilities For {{DeptDetails.deptDetails.DEPT_Desc}} Department:</h4>
                        </div>
                        <!-- Title End-->
                        <!-- Content Begin-->
                        <div class="col-md-12 inside-box">
                            <div class="col-xs-12">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <ul class="comment list-unstyled">
                                            <li class="comment">
                                                <!-- Equipment Details body -->
                                                <label for="form_message"><i aria-hidden="true"></i>Manager: {{DeptDetails.deptDetails.USERT_Username}}</label>
                                                <br />
                                                <div class="row">
                                                    <div class="col-sm-11">
                                                        <label for="form_message"><i aria-hidden="true"></i>Other Users Sharing These Responsibilities: </label>
                                                    </div>
                                                    <div class="col-sm-1 pull-right">
                                                        <span class="fa fa-user-plus dropdown-toggle" aria-hidden="true" data-toggle="dropdown" ></span>
                                                        <div class="dropdown-menu member-picker">
                                                            <input class="form-control" type="text" autocomplete="off"
                                                                   placeholder="Add Member"
                                                                   id="MemeberResult"
                                                                   ng-model="model.quickSearchTerm"
                                                                   ng-keyup="quickmemberSearchClick(model.quickSearchTerm)" />

                                                            <div class="auto-complete-container auto-complete-absolute-container" ng-show="quickshowResult" style="width: 280px; margin-right:40px;">
                                                                <ul class="auto-complete-results">
                                                                    <li class="auto-complete-item" ng-repeat="item in quicklistResultItems track by $index" ng-click="quickItemSelected($index, chosenID)">
                                                                        <div><span>{{item}}</span></div>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12 member-list-add task-list" style="margin-left:10px;margin-right:10px">
                                                        <ul class="">
                                                            <li ng-repeat="(key, image) in   DeptDetails.otherMembers">
                                                                <a ng-click="removeMember(key, chosenID)" style="top:0;left:0;"><i class="fa fa-times pull-right" style="background-color:goldenrod;height:20px;width:20px;font-size:15px;padding:1px"></i></a>
                                                                <a href="#">
                                                                    <img ng-src="{{image.images}}" ng-attr-title="{{image.USERT_Name}}" class="img-responsive" altSrc="../TaskManagementImages/defaultUser.png" onerror="this.src = $(this).attr('altSrc')">
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                   
                                                </div>
                                                
                                                
                                            </li>
                                        </ul>
                                        <div class="row">
                                            <div class="col-sm-11">
                                                <label for="form_message"><i aria-hidden="true"></i>To Do: </label>
                                            </div>
                                            <div class="col-sm-1 pull-right">
                                                <span class="glyphicon glyphicon-plus dropdown-toggle" aria-hidden="true" data-toggle="dropdown"></span>
                                                <div class="dropdown-menu panel panel-default ">                                                    @*<form>*@
                                                    <div class="col-md-12 form-group">
                                                        <br/>
                                                        <label for="QuickResponisbility">Add Responsibility:</label>
                                                        <input type="text" class="form-control" id="QuickResponisbility" ng-keypress="keypressed($event)" ng-model="model.AddRespDescription">
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input type="submit" class="btn btn-info add-list btn-send pull-right" value="ADD" ng-click="addResponisbility(chosenID)">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <br />
                                        
                                        <div ng-repeat="(key, resps) in DeptDetails.responsibilities">
                                            @{
                                                Html.RenderPartial("_OneRespDetailPartial");
                                            }
                                        </div>
                                    </div>

                                 </div>
                            </div>
                        </div>
                        <!-- Content End-->

                        <div class="modal-footer">
                        </div>

                    </div>
                </div>
            </div>
            <!-- DEPARTMENT RESPONSIBILITIES DETAILS MODAL END---->







           



        </div>

    </div>

</div>

