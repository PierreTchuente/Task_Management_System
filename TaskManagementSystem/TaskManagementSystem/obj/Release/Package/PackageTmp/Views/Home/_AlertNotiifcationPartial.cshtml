<div class="col-lg-3 col-md-3 col-sm-6" ng-controller="createEditNotifiAlertCtr" ng-cloak>

    <div class="panel panel-default task-column">
        <div class="panel-heading">Alert
            <button class="btn btn-info @*btn-respo3*@ btn-sm pull-right" ng-show="{{(userDetails.LEVELT_ID < 3)}}" data-toggle="modal" data-target="#createAlertModal" aria-hidden="true">Add Alert</button>
            <br />
        </div>
        <div class="panel-body">

            @{Html.RenderPartial("_ListItemNotificationAlertPartial");}


            <!-- CREATE EQUIPMENT MODAL START =========================================================================-->
            <div class="modal fade" id="createAlertModal" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <!-- Title Begin-->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Alert:</h4>
                        </div>
                        <!-- Title End-->
                        <!-- Content Begin-->
                        <div class="col-md-12 inside-box">
                            <div class="col-xs-12">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!---TEXT AREAS Begin-->
                                        @*<label for="form_message"><i aria-hidden="true"></i>  Title:</label>
                                        <textarea ng-model="model.AlertTile" id="form_Name" name="alertTitle" class="form-control descrip" placeholder="Alert Title." rows="1" required="required" data-error="Please Specify the Alert Title"></textarea>*@
                                        <label for="form_message"><i aria-hidden="true"></i>  Message:</label>
                                        <textarea ng-model="model.Message" id="form_Message" required name="message" class="form-control descrip" placeholder="Type Alert Message here." rows="4"></textarea>
                                        @*<div class="help-block with-errors"></div>*@
                                        <span class="help-block" ng-show="model.isRequired" ng-init="model.isRequired = false">Please Specify the Alert Message.</span>
                                        <!---/TEXT AREAS End-->
                                        <br />
                                        <div class="row">
                                            <div class="">
                                                <!--SAVE BUTTON-->
                                                <div class="col-md-12">
                                                    <input ng-click="addAlert()" type="submit" class="btn btn-info btn-send pull-right" value="SAVE" @*data-dismiss="modal"*@>
                                                </div>
                                                <!--/SAVE BUTTON-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Content End-->

                        <div class="modal-footer">
                        </div>

                    </div>
                </div>
            </div>
